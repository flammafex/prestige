{
  "name": "prestige",
  "version": "0.1.0",
  "description": "Anonymous verifiable voting - Secret ballot, public proof",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prestige": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-static",
    "copy-static": "cp -r src/web/public dist/web/",
    "dev": "tsc --watch",
    "web": "node dist/web/server.js",
    "cli": "node dist/cli/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:integration": "npm test -- --testPathPattern=integration",
    "lint": "eslint src/",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^1.9.0",
    "@noble/hashes": "^1.8.0",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.21",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "sharp": "^0.34.5",
    "ts-jest": "^29.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "glob": "^10.4.0"
  }
}
